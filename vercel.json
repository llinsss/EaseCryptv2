{
  "version": 2,
  "builds": [
    {
      "src": "client/dist/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "client/dist/$1"
    }
  ],
  "outputDirectory": "client/dist",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "vite",
  "env": {
    "VITE_API_URL": "@api_url",
    "VITE_TELEGRAM_BOT_USERNAME": "@telegram_bot_username"
  }
}